﻿@using DLC_Project.Models
@model Customer

@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc
@using System.Threading.Tasks

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
 @{
    ViewData["Title"] = "Login";
    Layout = null;

} 
 <!DOCTYPE html>
    <html lang="en">
    <head>
        <title>Login</title>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <!--===============================================================================================-->
        <link rel="icon" type="image/png" href="@Url.Content("~/LayoutLoginDLC/images/icons/favicon.ico")" />
        <!--===============================================================================================-->
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/LayoutLoginDLC/vendor/bootstrap/css/bootstrap.min.css")">
        <!--===============================================================================================-->
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/LayoutLoginDLC/fonts/font-awesome-4.7.0/css/font-awesome.min.css")">
        <!--===============================================================================================-->
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/LayoutLoginDLC/fonts/Linearicons-Free-v1.0.0/icon-font.min.css")">
        <!--===============================================================================================-->
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/LayoutLoginDLC/vendor/animate/animate.css")">
        <!--===============================================================================================-->
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/LayoutLoginDLC/vendor/css-hamburgers/hamburgers.min.css")">
        <!--===============================================================================================-->
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/LayoutLoginDLC/vendor/animsition/css/animsition.min.css")">
        <!--===============================================================================================-->
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/LayoutLoginDLC/vendor/select2/select2.min.css")">
        <!--===============================================================================================-->
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/LayoutLoginDLC/vendor/daterangepicker/daterangepicker.css")">
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/LayoutLoginDLC/css/util.css")">
        <link rel="stylesheet" type="text/css" href="@Url.Content("~/LayoutLoginDLC/css/main.css")">
        <!--===============================================================================================-->

    </head>
    <body>

        <div class="limiter">
            <div class="container-login100" style="background-image: url('@Url.Content("#")');">
                <div class="wrap-login100 p-l-110 p-r-110 p-t-62 p-b-33">
                    <!-- Sử dụng model binding để gửi dữ liệu từ form về controller -->
                    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                    {
                    <span class="login100-form-title p-b-53">
                        Đăng nhập bằng
                    </span>

                    <div class="d-flex justify-content-center mb-20">
                        <a href="#" class="btn-face mr-2">
                            <i class="fa fa-facebook-official"></i>
                            Facebook
                        </a>
                        <a href="#" class="btn-google ml-2">
                            <img src="@Url.Content("~/LayoutLoginDLC/images/icons/icon-google.png")" alt="GOOGLE">
                            Google
                        </a>
                    </div>

                        <div class="p-t-31 p-b-9">
                            <span class="txt1">Username</span>
                        </div>
                        <div class="wrap-input100 validate-input">
                            <!-- Bind Username to the Customer model -->
                            @Html.TextBoxFor(model => model.Username, new { @class = "input100", placeholder = "Username" })
                            @Html.ValidationMessageFor(model => model.Username)
                            <span class="focus-input100"></span>
                        </div>

                        <div class="p-t-13 p-b-9">
                            <span class="txt1">Password</span>
                            <a href="#" class="txt2 bo1 m-l-5">Forgot?</a>
                        </div>
                        <div class="wrap-input100 validate-input">
                            <!-- Bind Password to the Customer model -->
                            @Html.PasswordFor(model => model.Password, new { @class = "input100", placeholder = "Password" })
                            @Html.ValidationMessageFor(model => model.Password)
                            <span class="focus-input100"></span>
                        </div>

                        @if (ViewBag.ErrorMessage != null)
                        {
                            <div class="alert alert-danger">
                                @ViewBag.ErrorMessage
                            </div>
                        }

                        <div class="container-login100-form-btn m-t-17">
                            <button type="submit" class="login100-form-btn">
                                Sign In
                            </button>
                        </div>

                        <div class="w-full text-center p-t-55">
                            <span class="txt2">Not a member?</span>
                            <a href="@Url.Action("Register", "Account")" class="txt2 bo1">
                                Sign up now
                            </a>
                        </div>
                        <div asp-validation-summary="All" class="text-danger"></div>
                    }
                </div>
            </div>
        </div>

        <div id="dropDownSelect1"></div>

        <!--===============================================================================================-->
        <script src="@Url.Content("~/LayoutLoginDLC/vendor/jquery/jquery-3.2.1.min.js")"></script>
        <script src="@Url.Content("~/LayoutLoginDLC/vendor/animsition/js/animsition.min.js")"></script>
        <script src="@Url.Content("~/LayoutLoginDLC/vendor/bootstrap/js/popper.js")"></script>
        <script src="@Url.Content("~/LayoutLoginDLC/vendor/bootstrap/js/bootstrap.min.js")"></script>
        <script src="@Url.Content("~/LayoutLoginDLC/vendor/select2/select2.min.js")"></script>
        <script src="@Url.Content("~/LayoutLoginDLC/vendor/daterangepicker/moment.min.js")"></script>
        <script src="@Url.Content("~/LayoutLoginDLC/vendor/daterangepicker/daterangepicker.js")"></script>
        <script src="@Url.Content("~/LayoutLoginDLC/vendor/countdowntime/countdowntime.js")"></script>
        <script src="@Url.Content("~/LayoutLoginDLC/main.js")"></script>


    </body>
</html>
